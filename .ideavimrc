source ~/.vimrc

" IdeaVim plugins

" Vim commentary
set commentary
" Proper paste without losing the text in the register
set ReplaceWithRegister
" Relative Line Numbers
set rnu
" Absolute Line Number on selected line
set nu
set highlightedyank
" set argtextobj
set vim-paragraph-motion

" paste maps
" nmap <Leader>p gr
" nmap <Leader>pp grr
" xmap <Leader>p gr

" GoTo Impementation
nmap gD :action GotoImplementation<CR>
